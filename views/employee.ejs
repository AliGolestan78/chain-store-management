<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<main class="container">
    <div class="products">
        <% if (employees.length > 0) { %>
            <% employees.forEach((employee)=> { %>
                <div class="product">
                    <img class="user-profile" src="<%= employee.em_photo ? `/img/${employee.em_photo}` : '/img/user-profile.png' %>"
                         alt="<%= employee.em_name %>"/>
                    <h2 class="product__title"><%= employee.em_name %> <%= employee.em_lastname%></h2>
                    <p class="product__price"><%= employee.em_role %></p>
                    <div class="buttons">
                        <a class="detail-btn">Details</a>
                        <a href="#" class="detail-btn">Remove</a>
                        <a href="#" class="detail-btn">Update</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h1>There's no employee...</h1>
        <% } %>
    </div>
</main>
<%- include('includes/end.ejs') %>
