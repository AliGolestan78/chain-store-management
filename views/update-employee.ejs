<%- include('includes/head.ejs') %> <%- include('includes/nav.ejs') %>
<form class="form-border form-update-employee" data-employee="<%= employee._id %>">
    <div class="form-field">
        <label for="name">Name:</label>
        <input value="<%= employee.em_name %>" type="text" id="name" name="name" placeholder="Name"/>
    </div>

    <div class="form-field">
        <label for="lastname">Lastname:</label>
        <input value="<%= employee.em_lastname %>" type="text" id="lastname" name="lastname" placeholder="Lastname"/>
    </div>

    <div class="form-field">
        <label for="father">FatherName:</label>
        <input value="<%= employee.em_fatherName %>" type="text" id="father" name="father" placeholder="FatherName"/>
    </div>

    <div class="form-field">
        <label for="phone">Phone:</label>
        <input value="<%= employee.em_phone %>" pattern="[0-9]{11}" type="tel" id="phone" name="phone"
               placeholder="Phone"/>
    </div>

    <div class="form-field">
        <label for="image">Profile Url:</label>
        <input
                type="url"
                id="image"
                pattern="https://.*"
                value="<%= employee.em_photo === 'user-profile.png' ? '' : employee.em_photo %>"
                name="image"
                placeholder="https..."
        />
    </div>

    <div class="form-field">
        <label for="id">Id:</label>
        <input value="<%= employee.em_id %>" pattern="[0-9]{10}" type="text" id="id" name="id" placeholder="Id"/>
    </div>

    <div class="form-field">
        <label for="naid">National Id:</label>
        <input value="<%= employee.em_naid %>" type="text" id="naid" pattern="[0-9]{0,10}" name="naid"
               placeholder="National Id:"/>
    </div>

    <div class="form-field">
        <label for="brith">Brith Date:</label>
        <input type="date" id="brith" name="brith" placeholder="Brith Date:"/>
    </div>

    <div class="form-field">
        <label for="personnel">Personnel Code:</label>
        <input value="<%= employee.em_personnelCode %>" pattern="[0-9]{9}" type="text" id="personnel" name="personnel"
               placeholder="Personnel Code:"/>
    </div>

    <!--    <div class="form-field">-->
    <!--        <label for="password">Password:</label>-->
    <!--        <input value="" type="password" id="password" name="password" placeholder="••••••••"/>-->
    <!--    </div>-->

    <!--    <div class="form-field">-->
    <!--        <label for="password2">Password Confirm:</label>-->
    <!--        <input required type="password" id="password2" name="password2" placeholder="••••••••"/>-->
    <!--    </div>-->

    <div class="form-field">
        <label for="city">City:</label>
        <input value="<%= employee.em_address.city %>" type="text" id="city" name="city" placeholder="City"/>
    </div>

    <div class="form-field">
        <label for="street">Street:</label>
        <input
                value="<%= employee.em_address.street %>"
                type="text"
                id="street"
                name="street"
                placeholder="Street"
        />
    </div>

    <div class="form-field">
        <label for="alley">Alley:</label>
        <input value="<%= employee.em_address.alley %>" type="text" id="alley" name="alley" placeholder="Alley"/>
    </div>

    <div class="form-field">
        <label for="pelaque">Pelaque:</label>
        <input
                value="<%= employee.em_address.pelaque %>"
                type="number"
                id="pelaque"
                name="pelaque"
                placeholder="Pelaque"
        />
    </div>

    <div class="form-field">
        <label for="postal">Postal Code:</label>
        <input
                value="<%= employee.em_address.postalCode %>"
                type="text"
                pattern="[0-9]{10}"
                id="postal"
                name="postal"
                placeholder="Postal Code"
        />
    </div>

    <div class="form-field role">
        <label for="role"> Role:</label>
        <input disabled data-role="<%= employee.em_role %>" value="<%= employee.em_role %>" name="role" id="role">
    </div>
    <% if (employee.em_role === 'branch') { %>
        <div class="form-field brem-form">
            <label for="brem_work">Branch Id:</label>
            <input class="brem-form__input" value="<%= employee.brem_work %>" required type="text" id="brem_work"
                   name="brem_work" placeholder="Branch Id"/>
            <label for="brem_employ">Employment Date:</label>
            <input class="brem-form__input" type="date" id="brem_employ" name="brem_employ"
                   placeholder="Employment Date:"/>
        </div>
    <% } %>

    <% if (employee.em_role === 'stock') { %>
        <div class="form-field stem-form">
            <label for="stem_work">Stock Id:</label>
            <input class="stem-form__input" value="<%= employee.stem_work %>" required type="text" id="stem_work"
                   name="stem_work" placeholder="Stock Id"/>
            <label for="stem_employ">Employment Date:</label>
            <input class="stem-form__input" type="date" id="stem_employ" name="stem_employ"
                   placeholder="Employment Date:"/>
            <label for="section"> Section:</label>
            <select class="stem-form__input" name="section" id="section">
                <% if (employee.stem_section === 'storage') { %>
                    <option selected value="storage">Storage</option>
                    <option value="publish">Publish</option>
                <% } else { %>
                    <option value="storage">Storage</option>
                    <option selected value="publish">Publish</option>
                <% } %>
            </select>
            <div class="checkbox-field">
                <label for="manager">Is Manager</label>
                <input type="checkbox" id="manager" name="manager" value="True"/>
            </div>
        </div>
    <% } %>

    <div class="button-div">
        <button class="button" type="submit">Add Employee</button>
    </div>
</form>
<%- include('includes/end.ejs') %>
